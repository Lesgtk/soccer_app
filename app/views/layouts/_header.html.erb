    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to icon('far', 'futbol') + " soccer app", root_path, id: "logo" %>
  </div>
  <nav>
    <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
      <% if logged_in? %>
        <li><%= link_to icon('fas', 'th') + " 投稿一覧",   root_path %></li>
        <li><%= link_to icon('fas', 'users') + " ユーザー一覧", users_path %></li>
