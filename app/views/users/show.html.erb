<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if current_user.admin? && !current_user?(@user) %>
        <%= link_to "delete", @user, method: :delete,
                                data: { confirm: "You sure?" } %>
        <% end %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
  <% if @user.posts.any? %>
    <h3>Posts (<%= @user.posts.count %>)</h3>
    <ol class="posts">
      <%= render @post %>
    </ol>
  <% end %>
</div>
</div>
