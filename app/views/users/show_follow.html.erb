<% provide(:title, @title) %>
<div class="container show-follow-container">
  <div class="row show-follow-title">
  <h2>
    <%= icon("far", "futbol", class: "soccer-icon") %>
    <% if @title == "Followers" %>
      フォロワー
    <% else %>
      フォロー
    <% end %>
    <%= icon("far", "futbol", class: "soccer-icon") %>
  </h2>
  </div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user-area">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="main-feed col-md-8">
      <ol class="posts">
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
          <%= paginate @users %>
      <% end %>
      </ol>
    </div>
  </div>
</div>
