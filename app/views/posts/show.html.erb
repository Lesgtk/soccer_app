<% provide(:title, @post.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <span><%= @post.title %></span>
    <span><%= @post.content %></span>
    <span><%= @post.age_type %></span>
    <span><%= @post.category %></span>
    <div>
      <%= render 'like' %>
    </div>
  </div>
  <%= render 'comment' %>
</div>
