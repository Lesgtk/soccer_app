<div class="main-title">コメント一覧</div>
    <% @comments.each do |c| %>
    <% if @user.image? %>
        <%= image_tag @user.image.thumb50.url, class: "feed-circle" %>
    <% else %>
        <%= image_tag "default.jpg", class: "comment-circle" %>
    <% end %>
      <a href="/users/<%= @post.user.id %>"><%= @user.name %></a>
      <%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>
      <div class="comment-show">
        <%= c.comment_content %>
      </div>
      <% end %>

<%# コメントフォーム %>
<div class="comment-row">
    <%= form_with(model:[@post, @comment], method: :post) do |f| %>
      <%= f.text_area :comment_content, class: "comment-content", placeholder: "コメント本文(100文字以内)"  %>
      <%= f.hidden_field :post_id, value: @post.id %>
      <%= f.submit 'コメントする', class: "btn btn-primary comment-btn" %>
    <% end %>
  </div>
