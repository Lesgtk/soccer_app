<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="age_type">
        <h1>対象別</h1>
        <span><%= link_to "小学生以下", current_user %></span>
        <span><%= link_to "中学生", current_user %></span>
        <span><%= link_to "高校生", current_user %></span>
        <span><%= link_to "社会人", current_user %></span>
        <span><%= link_to "全対象", current_user %></span>
      </section>
      <section class="category">
        <h1>カテゴリー別</h1>
        <span><%= link_to "戦術", current_user %></span>
        <span><%= link_to "技術", current_user %></span>
        <span><%= link_to "知識", current_user %></span>
        <span><%= link_to "メンタル", current_user %></span>
        <span><%= link_to "練習メニュー", current_user %></span>
        <span><%= link_to "その他", current_user %></span>
      </section>
    </aside>
    <div class="col-md-8">
      <ul class="user-tabs">
        <li class="active"><%= link_to("最新投稿", root_path) %></li>
        <li><%= link_to("いいね数順", "/static_pages/likes") %></li>
      </ul>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1> Soccer App へようこそ！！</h1>

  <h2>
     SOCCER APPはサッカーが上手くなりたい人の為のコミュニティサイトです。
  </h2>

  <%= link_to "新規登録する", signup_path, class: "btn btn-lg btn-primary" %>
  <%= link_to "ゲストログイン(閲覧用)", guest_sign_in_path ,class: "btn btn-lg btn-primary", method: :post  %>
</div>

<% end %>
