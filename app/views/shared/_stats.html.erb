<% @user ||= current_user %>
  <%= link_to(following_user_path(@user), class: "stats-link") do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    フォロー
  <% end %>
  <%= link_to(followers_user_path(@user), class: "stats-link") do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    フォロワー
  <% end %>
