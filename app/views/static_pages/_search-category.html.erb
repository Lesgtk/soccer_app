<%= search_form_for @q, url:search_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <%= icon("far", "futbol", class: "soccer-icon") %>
      <%= f.label :カテゴリー別：検索 %>
    </div>
    <div class="col-4"><%= f.radio_button :category_eq, 1 %></div>
    <div class="col-8">戦術</div>
    <div class="col-4"><%= f.radio_button :category_eq, 2 %></div>
    <div class="col-8">技術</div>
    <div class="col-4"><%= f.radio_button :category_eq, 3 %></div>
    <div class="col-8">知識</div>
    <div class="col-4"><%= f.radio_button :category_eq, 4 %></div>
    <div class="col-8">メンタル</div>
    <div class="col-4"><%= f.radio_button :category_eq, 5 %></div>
    <div class="col-8">練習メニュー</div>
    <div class="col-4"><%= f.radio_button :category_eq, 6 %></div>
    <div class="col-8">その他</div>
    <div class="col-12 search-btn">
      <%= button_tag :type => "submit", :class =>"btn btn-secondary" do %>
        検索&nbsp;<i class="fa fa-search"></i>
        <% end %>
    </div>
  </div>
</div>
<% end %>
