<% if logged_in? %>
  <%= render 'layouts/search' %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user-area">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'search-age-type' %>
      </section>
      <section>
      <%= search_form_for @q, url:search_path do |f| %>
         <label>
           <%= f.label :カテゴリー別 %>
           <%= f.radio_button :category_eq, 1 %>戦術
           <%= f.radio_button :category_eq, 2 %>技術
           <%= f.radio_button :category_eq, 3 %>知識
           <%= f.radio_button :category_eq, 4 %>メンタル
           <%= f.radio_button :category_eq, 5 %>練習メニュー
           <%= f.radio_button :category_eq, 6 %>その他
         </label>
         <%= f.submit ("カテゴリー別:検索") %>
      <% end %>
      </section>
    </aside>
    <div class="main-feed col-md-8">
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><%= link_to("最新投稿", root_path) %></li>
        <li role="presentation"><%= link_to("いいね数順", "/static_pages/likes") %></li>
      </ul>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center">
  <h1 class="app-title">SOCEER APP </h1>
  <h2 class="copy">
     SOCCER APPはサッカーが上手くなりたい人の為の<br>
     コミュニティサイトです。
  </h2>
  <div class="topbtn">
  <%= link_to "新規登録", signup_path, class: "topbtn__item" %>
  <%= link_to "ログイン", login_path, class: "topbtn__item" %>
  <%= link_to "ゲストログイン(閲覧用)", guest_sign_in_path ,class: "topbtn__item", method: :post  %>
  </div>
</div>
<% end %>
