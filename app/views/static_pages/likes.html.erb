<%= render 'layouts/search' %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-area">
      <%= render 'shared/user_info' %>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <section>
    <%= search_form_for @q, url:search_path do |f| %>
       <label　class="radio">
         <%= f.label :対象年齢別 %>
         <%= f.radio_button :age_type_eq, 1 %>小学生
         <%= f.radio_button :age_type_eq, 2 %>中学生
         <%= f.radio_button :age_type_eq, 3 %>高校生
         <%= f.radio_button :age_type_eq, 4 %>社会人
         <%= f.radio_button :age_type_eq, 5 %>全対象
       </label>
       <%= f.submit ("対象別:検索") %>
    <% end %>
    </section>
    <section>
    <%= search_form_for @q, url:search_path do |f| %>
       <label>
         <%= f.label :カテゴリー別 %>
         <%= f.radio_button :category_eq, 1 %>戦術
         <%= f.radio_button :category_eq, 2 %>技術
         <%= f.radio_button :category_eq, 3 %>知識
         <%= f.radio_button :category_eq, 4 %>メンタル
         <%= f.radio_button :category_eq, 5 %>練習メニュー
         <%= f.radio_button :category_eq, 6 %>その他
       </label>
       <%= f.submit ("カテゴリー別:検索") %>
    <% end %>
    </section>
  </aside>
  <div class="main-feed col-md-8">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation"><%= link_to("最新投稿", root_path) %></li>
      <li role="presentation" class="active"><%= link_to("いいね数順", "/static_pages/likes") %></li>
    </ul>
    <ol class="posts">
    <%= render @all_ranks %>
    </ol>
  </div>
</div>
