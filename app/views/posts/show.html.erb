<% provide(:title, @post.title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <span>タイトル：<%= @post.title %><br></span>
    <span>本文：<%= @post.content %><br></span>
    <span>対象：<%= @post.age_type %><br></span>
    <span>カテゴリー：<%= @post.category %><br></span>
    <span>
    <strong>Youtube url:</strong>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @post.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </span>
    <div>
      <%= render 'like' %>
    </div>
  </div>
  <%= render 'comment' %>
</div>
