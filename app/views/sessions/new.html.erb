<% provide(:title, "Log in") %>
<div class="container box-form">
  <h2 class="form-title">ログイン</h2>
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= link_to "パスワードを忘れた方", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>次回から自動的にログイン</span>
      <% end %>

      <div class="mb-3">
      <%= f.submit "ログインする", class: "btn btn-primary" %>
      </div>
      <div class="mb-3">
      <%= link_to "ゲストログイン(閲覧用)", guest_sign_in_path ,class: "btn btn-warning", method: :post  %>
      </div>
    <% end %>
  </div>
</div>
