<% provide(:title, @user.name) %>
<div class="container">
  <div class="main-title">
    プロフィール
  </div>

  <div class="row mypage-main">
    <div class="mypage-info col-md-6 offset-md-3">
    <div class="mypage-img">
      <%= image_tag @user.image.thumb200.url, class: "circle" %>
    </div>
    <div class="d-inline-block mypage-stats">
      ユーザー名:<%= current_user.name %><br>
      投稿数: <%= current_user.posts.count %><br>
      <%= icon("far", "futbol", class: "soccer-icon") %>
      チェック数:<%= @likes_count %><br>
      <%= render 'shared/stats' %>
    </div>
    </div>
  </div>
  <div class="main-title">
    <%= icon("far", "futbol", class: "soccer-icon") %>
    投稿
    <%= icon("far", "futbol", class: "soccer-icon") %>
  </div>
  <div class="row mypage-content">
    <div class="mypage-feed col-md-8 offset-md-2">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <% end %>
    </div>
  </div>
</div>
